<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="epicodus.madlibs.AddWordsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill out the boxes below to create a new story!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editOccupation"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Occupation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNoun1"
        android:layout_below="@+id/editOccupation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editOccupation"
        android:layout_alignEnd="@+id/editOccupation"
        android:hint="Noun" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editAdjective1"
        android:layout_below="@+id/editNoun1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Adjective" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNoun2"
        android:layout_below="@+id/editAdjective1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Noun" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editVerb1"
        android:layout_below="@+id/editNoun2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Verb" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editAdjective2"
        android:layout_below="@+id/editVerb1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Adjective" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNoun3"
        android:layout_below="@+id/editAdjective2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Noun" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editVerb2"
        android:layout_below="@+id/editNoun3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Verb" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNoun4"
        android:layout_below="@+id/editVerb2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Noun" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editVerb3"
        android:layout_below="@+id/editNoun4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Verb" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
